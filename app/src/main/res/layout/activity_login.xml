<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_login_logo"
                android:layout_marginTop="50dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/k_temp"
                />

            <EditText
                android:id="@+id/activity_login_email_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/login_email_hint"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/activity_login_password_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/login_password_hint"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/activity_login_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/login_button"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/activity_login_facebook_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/facebook_button"
                android:layout_marginTop="10dp"/>



        </LinearLayout>

    </ScrollView>


</LinearLayout>
