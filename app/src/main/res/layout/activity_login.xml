<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kollabstr_salmon"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lobstr"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/activity_login_email_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/login_email_hint"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/activity_login_password_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/login_password_hint"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/activity_login_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/log_in"
                android:layout_marginTop="10dp"/>

           <com.boomer.omer.kollabstr.customviews.KollabstrFacebookButton
               android:id="@+id/activity_login_facebook_button"
               android:layout_width="200dp"
               android:layout_height="40dp"
               android:layout_gravity="center_horizontal" />







        </LinearLayout>

    </ScrollView>


</LinearLayout>
