<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup_profile_pick_a_social_media"
        android:layout_margin="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/pick_socialmedia_view_stack">

            <com.boomer.omer.kollabstr.customviews.SocialMediaView
                android:id="@+id/facebook_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:listImpact="false"
                custom:type="facebook">
            </com.boomer.omer.kollabstr.customviews.SocialMediaView>

            <com.boomer.omer.kollabstr.customviews.SocialMediaView
                android:id="@+id/twitter_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:listImpact="false"
                custom:type="twitter">
            </com.boomer.omer.kollabstr.customviews.SocialMediaView>

            <com.boomer.omer.kollabstr.customviews.SocialMediaView
                android:id="@+id/instagram_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:listImpact="false"
                custom:type="instagram">
            </com.boomer.omer.kollabstr.customviews.SocialMediaView>

            <com.boomer.omer.kollabstr.customviews.SocialMediaView
                android:id="@+id/youtube_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                custom:listImpact="false"
                custom:type="youtube">
            </com.boomer.omer.kollabstr.customviews.SocialMediaView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>