<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="75dp">
    <ImageView
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:id="@+id/socialmedia_selection_image"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/socialmedia_impact"
        android:layout_toRightOf="@+id/socialmedia_selection_image"
        android:layout_toLeftOf="@+id/socialmedia_follower_count"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/socialmedia_follower_count"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp" />
</RelativeLayout>